# Home directory
HOME=/home/matkat

# Docker configuration (Ubuntu paths)
DOCKER_COMPOSE_WORKDIR=/srv/docker
XAUTHORITY=/home/matkat/.Xauthority
DISPLAY=:0

# Database
DATABASE_URL=postgres://admin:1234@localhost:5432/vehicles

# Kafka
KAFKA_BROKER=localhost:9094

# Application paths (Ubuntu)
UBUNTU_RAPTOR_HOME=/home/matkat/mobile-crawler
UBUNTU_CRAWLER_HOME=/home/matkat/crawler-app
MAC_RAPTOR_HOME=/Users/matkat/Software/JavaScript/mobile-crawler
MAC_CRAWLER_HOME=/Users/matkat/Software/docker-env/crawler

# Launcher paths
LAUNCHER_APP_ROOT=/home/matkat/launcher-app
LAUNCHER_YAML_PATH=/home/matkat/launcher-app/devops/launcher.yml

# Scripts
CHROME_START_SCRIPT=/home/matkat/launcher-app/devops/bin/start-chrome.sh
START_MOBILE_DE=/home/matkat/launcher-app/devops/bin/start-mobile_de.sh
STOP_MOBILE_DE=/home/matkat/launcher-app/devops/bin/stop-mobile_de.sh
START_CRAWLER=/home/matkat/launcher-app/devops/bin/start-crawler.sh
STOP_CRAWLER=/home/matkat/launcher-app/devops/bin/stop-crawler.sh
START_RAPTOR=/home/matkat/launcher-app/devops/bin/start-raptor.sh
STOP_RAPTOR=/home/matkat/launcher-app/devops/bin/stop-raptor.sh

# Slack
SLACK_NOTIFICATIONS_ENABLED=true
SLACK_MAX_MESSAGES_PER_MINUTE=10

# Scheduler settings
RAPTOR_SCHEDULER_POLL_SECONDS=300
RAPTOR_SERVICE_INTERVAL_HOURS=24
RAPTOR_SERVICE_MAX_RUNTIME_MINUTES=0
RAPTOR_PERMANENT_SERVICE=mobile_de
LAUNCHER_YAML_PATH=/home/matkat/launcher-app/devops/launcher.yml